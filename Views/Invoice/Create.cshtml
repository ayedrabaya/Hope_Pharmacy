@{
}
@model HopePharmacy.Models.InvoiceModel;
<html>
    <head>

    </head>
    <body>
        <form asp-action="AddNewInvoice">
        <div class="row">
        <div class="col-md-4">
            Patient Name
            <span class="text-danger">*</span>
            <select asp-for="PatientId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Patient,"PatientId","PatientName"))">
                <option value="">Please Select</option>

            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>
            <div class="col-md-4">
                Medicine Name
            <span class="text-danger">*</span>
            <select asp-for="MedicineId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Medicine,"Id","Name"))">
                <option value="">Please Select</option>

            </select>
            <span asp-validation-for="MedicineId" class="text-danger"></span>
                
            </div>
        <div class="col-md-4">
            Quantity
        <span class="text-danger">*</span>
            <input type="number" asp-for="QTY" class="form-control" />
        <span asp-validation-for="QTY" class="text-danger"></span>


            
        </div>
    </div>
        <div class="row" style="padding-top:25px">
            <div class="col-md-4">
                <input type="submit" class="btn btn-primary" value="save" />

            </div>
        </div>
    </form>
 
    </body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
</html>
